generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  password String?
  username String @unique
}

model Settings {
  id Int @id @default(autoincrement())
  userId Int
  waxpeerApiKey String?
  waxpeerRateLimit Int?
  priceEmpireApiKey String?
  PriceEmpireRateLimit Int?
  paused Boolean @default(false)
  priceRange PriceRange[]
}

model PriceRange{
  id Int @id @default(autoincrement())
  settings           Settings             @relation(fields: [settingsId], references: [id])
  settingsId         Int
  SourcePriceMin Float?
  SourcePriceMax Float?
  priceRangeMin Float
  priceRangeMax Float
}

model Item {
  id Int @id @default(autoincrement())
  name String
  type String
  active Boolean @default(true)
  item_id String
  source String
  sourcePrice Float
  lastUpdated DateTime
  undercutPrice Float
  undercutPercentage Float
  currentPrice Float
  undercutByPriceOrPercentage String
  priceRangeMin Float
  priceRangeMax Float
  priceRangePercentage Float
  whenNoOneToUndercutListUsing String
}
