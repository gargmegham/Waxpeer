generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  password String?
  username String @unique
}

model Settings {
  id Int @id @default(autoincrement())
  userId Int
  waxpeerApiKey String?
  priceEmpireApiKey String?
  botInterval Int?
  paused Boolean @default(false)
}

model Item {
  id Int @id @default(autoincrement())
  name String
  type String
  active Boolean @default(true)
  item_id Int
  source String
  sourcePrice Int
  lastUpdated DateTime
  undercutPrice Int
  undercutPercentage Int
  currentPrice Int
  undercutByPriceOrPercentage String
  priceRangeMin Int
  priceRangeMax Int
  priceRangePercentage Int
  whenNoOneToUndercutListUsing String
}
